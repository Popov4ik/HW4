<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<VBox fx:controller="com.example.test_1.Controller" xmlns:fx="http://javafx.com/fxml"
      alignment="center">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <TextArea fx:id="textArea" editable="false" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
    <HBox prefHeight="20.0" prefWidth="200.0">
            <TextField fx:id="textField" onKeyPressed="#enter" HBox.hgrow="ALWAYS"/>
            <Button onAction="#sendClick" text="ОТПРАВИТЬ"/>
    </HBox>
</VBox>